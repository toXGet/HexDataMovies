<div class="top-row pl-4 navbar navbar-dark">
    <img style="max-height:48px; margin-top: -4px;" src="/Images/HexData.png">
    <a class="navbar-brand" href="">HexData Movies</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Servicio Películas
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="filmgenres" Match="NavLinkMatch.All">
                <span class="oi oi-book" aria-hidden="true"></span> Categorías
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="movies" Match="NavLinkMatch.All">
                <span class="oi oi-image" aria-hidden="true"></span> Películas
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="movies/create" Match="NavLinkMatch.All">
                <span class="oi oi-brush" aria-hidden="true"></span> Crear Películas
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="movies/search" Match="NavLinkMatch.All">
                <span class="oi oi-magnifying-glass" aria-hidden="true"></span> Buscar Película
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="actors" Match="NavLinkMatch.All">
                <span class="oi oi-pencil" aria-hidden="true"></span> Actores
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="anterior" Match="NavLinkMatch.All">
                <span class="oi oi-clock" aria-hidden="true"></span> Galería de Películas
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="list">
                <span class="oi oi-video" aria-hidden="true"></span> Lista de Películas
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-bullhorn" aria-hidden="true"></span> Comentarios
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
